<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/mvc"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:beans="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context" xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-4.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

	<!-- DispatcherServlet Context: defines this servlet's request-processing 
		infrastructure -->

	<!-- Enables the Spring MVC @Controller programming model -->
	<annotation-driven />

	<!-- Handles HTTP GET requests for /resources/** by efficiently serving 
		up static resources in the ${webappRoot}/resources directory -->
	<resources mapping="/resources/**" location="/resources/" />

	<!-- Resolves views selected for rendering by @Controllers to .jsp resources 
		in the /WEB-INF/views directory -->
	<beans:bean
		class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<beans:property name="prefix" value="/WEB-INF/views/" />
		<beans:property name="suffix" value=".jsp" />
	</beans:bean>

	<context:component-scan base-package="j2ee.purchase.supplier.controller" />

	<!-- Begin Data Source -->
	<beans:bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource"
		destroy-method="close">
		<beans:property name="driverClassName" value="com.mysql.jdbc.Driver" />
		<beans:property name="url" value="jdbc:mysql://localhost:3306/j2ee" />
		<beans:property name="username" value="root" />
		<beans:property name="password" value="01111993$T" />
	</beans:bean>
	<!-- End Data Source -->

	<!-- Begin Hibernate -->
	<beans:bean id="hibernate4AnnotatedSessionFactory"
		class="org.springframework.orm.hibernate4.LocalSessionFactoryBean">
		<beans:property name="dataSource" ref="dataSource" />
		<beans:property name="annotatedClasses">
			<beans:list>
				<beans:value>j2ee.purchase.supplier.model.User</beans:value>
				<beans:value>j2ee.purchase.supplier.model.Company</beans:value>
				<beans:value>j2ee.purchase.supplier.model.Partner</beans:value>
				<beans:value>j2ee.purchase.supplier.model.StockLocation
				</beans:value>
				<beans:value>j2ee.purchase.supplier.model.PurchaseOrder
				</beans:value>
				<beans:value>j2ee.purchase.supplier.model.Currency</beans:value>
				<beans:value>j2ee.purchase.supplier.model.Product</beans:value>
				<beans:value>j2ee.purchase.supplier.model.StockMove</beans:value>
				<beans:value>j2ee.purchase.supplier.model.PurchaseOrder
				</beans:value>
				<beans:value>j2ee.purchase.supplier.model.PurchaseOrderLine
				</beans:value>
			</beans:list>
		</beans:property>
		<beans:property name="hibernateProperties">
			<beans:props>
				<beans:prop key="hibernate.dialect">org.hibernate.dialect.MySQLDialect
				</beans:prop>
				<beans:prop key="hibernate.show_sql">true</beans:prop>
				<beans:prop key="hibernate.hbm2ddl.auto">create</beans:prop>
			</beans:props>
		</beans:property>
	</beans:bean>
	<tx:annotation-driven transaction-manager="transactionManager" />

	<beans:bean id="transactionManager"
		class="org.springframework.orm.hibernate4.HibernateTransactionManager">
		<beans:property name="sessionFactory"
			ref="hibernate4AnnotatedSessionFactory" />
	</beans:bean>
	<!-- End Hibernate -->

	<!-- Begin Bean DAO -->
	<beans:bean id="userDAO" class="j2ee.purchase.supplier.dao.impl.UserDAOImpl">
		<beans:property name="sessionFactory"
			ref="hibernate4AnnotatedSessionFactory" />
	</beans:bean>
	<beans:bean id="companyDAO"
		class="j2ee.purchase.supplier.dao.impl.CompanyDAOImpl">
		<beans:property name="sessionFactory"
			ref="hibernate4AnnotatedSessionFactory" />
	</beans:bean>
	<beans:bean id="partnerDAO"
		class="j2ee.purchase.supplier.dao.impl.PartnerDAOImpl">
		<beans:property name="sessionFactory"
			ref="hibernate4AnnotatedSessionFactory" />
	</beans:bean>

	<beans:bean id="accountTaxDAO"
		class="j2ee.purchase.supplier.dao.impl.AccountTaxDAOImpl">
		<beans:property name="sessionFactory"
			ref="hibernate4AnnotatedSessionFactory" />
	</beans:bean>
	<beans:bean id="currencyDAO"
		class="j2ee.purchase.supplier.dao.impl.CurrencyDAOImpl">
		<beans:property name="sessionFactory"
			ref="hibernate4AnnotatedSessionFactory" />
	</beans:bean>
	<beans:bean id="productDAO"
		class="j2ee.purchase.supplier.dao.impl.ProductDAOImpl">
		<beans:property name="sessionFactory"
			ref="hibernate4AnnotatedSessionFactory" />
	</beans:bean>
	<beans:bean id="purchaseOrderDAO"
		class="j2ee.purchase.supplier.dao.impl.PurchaseOrderDAOImpl">
		<beans:property name="sessionFactory"
			ref="hibernate4AnnotatedSessionFactory" />
	</beans:bean>
	<beans:bean id="purchaseOrderLineDAO"
		class="j2ee.purchase.supplier.dao.impl.PurchaseOrderLineDAOImpl">
		<beans:property name="sessionFactory"
			ref="hibernate4AnnotatedSessionFactory" />
	</beans:bean>
	<beans:bean id="stockLocationDAO"
		class="j2ee.purchase.supplier.dao.impl.StockLocationDAOImpl">
		<beans:property name="sessionFactory"
			ref="hibernate4AnnotatedSessionFactory" />
	</beans:bean>
	<beans:bean id="stockMoveDAO"
		class="j2ee.purchase.supplier.dao.impl.StockMoveDAOImpl">
		<beans:property name="sessionFactory"
			ref="hibernate4AnnotatedSessionFactory" />
	</beans:bean>
	<!-- End Bean DAO -->

	<!-- Begin Bean Service -->
	<beans:bean id="userService"
		class="j2ee.purchase.supplier.service.impl.UserServiceImpl">
		<beans:property name="userDAO" ref="userDAO"></beans:property>
	</beans:bean>
	<beans:bean id="companyService"
		class="j2ee.purchase.supplier.service.impl.CompanyServiceImpl">
		<beans:property name="companyDAO" ref="companyDAO"></beans:property>
	</beans:bean>
	<beans:bean id="partnerService"
		class="j2ee.purchase.supplier.service.impl.PartnerServiceImpl">
		<beans:property name="partnerDAO" ref="partnerDAO"></beans:property>
	</beans:bean>
	
	<beans:bean id="accountTaxService"
		class="j2ee.purchase.supplier.service.impl.AccountTaxServiceImpl">
		<beans:property name="accountTaxDAO" ref="accountTaxDAO"></beans:property>
	</beans:bean>
	
	<beans:bean id="currencyService"
		class="j2ee.purchase.supplier.service.impl.CurrencyServiceImpl">
		<beans:property name="currencyDAO" ref="currencyDAO"></beans:property>
	</beans:bean>
	
	<beans:bean id="productService"
		class="j2ee.purchase.supplier.service.impl.ProductServiceImpl">
		<beans:property name="productDAO" ref="productDAO"></beans:property>
	</beans:bean>
	
	<beans:bean id="purchaseOrderService"
		class="j2ee.purchase.supplier.service.impl.PurchaseOrderServiceImpl">
		<beans:property name="purchaseOrderDAO" ref="purchaseOrderDAO"></beans:property>
	</beans:bean>
	
	<beans:bean id="purchaseOrderLineService"
		class="j2ee.purchase.supplier.service.impl.PurchaseOrderLineServiceImpl">
		<beans:property name="purchaseOrderLineDAO" ref="purchaseOrderLineDAO"></beans:property>
	</beans:bean>
	
	<beans:bean id="stockLocationService"
		class="j2ee.purchase.supplier.service.impl.StockLocationServiceImpl">
		<beans:property name="stockLocationDAO" ref="stockLocationDAO"></beans:property>
	</beans:bean>
	
	<beans:bean id="stockMoveService"
		class="j2ee.purchase.supplier.service.impl.StockMoveServiceImpl">
		<beans:property name="stockMoveDAO" ref="stockMoveDAO"></beans:property>
	</beans:bean>
	<!-- End Bean Service -->

</beans:beans>
